<div class="main-container">
    <main class="content">
        <% if (user == null) { %>
            <h1><a href="/login">Sign in</a></h1>
            <h1><a href="/register">Sign up</a></h1>
        <% } else { %>
            <div class="welcome-container">
                <div class="page-content page-container" id="page-content">
                    <div class="padding">
                        <div class="row container-fluid d-flex justify-content-center mx-0">
                            <div class="col-xl-6 col-md-12">
                                <div class="card user-card-full">
                                    <div class="row m-l-0 m-r-0">
                                        <div class="col-sm-4 bg-c-lite-green user-profile">
                                            <div class="card-block text-center text-white">
                                                <div class="m-b-25">
                                                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                                </div>
                                                <span id="namespace"><h6 class="f-w-800"><%= user.Name %></h6></span>
                                                <p>SW Engineer</p>
                                                <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="card-block">
                                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Email</p>
                                                        <h6 class="text-muted f-w-400"><%= user.Email || "No Email Provided" %></h6>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Phone</p>
                                                        <h6 class="text-muted f-w-400"><%= user.Phone || "No Phone Provided" %></h6>
                                                    </div>
                                                </div>
                                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Most View</h6>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">Recent</p>
                                                        <% data3.forEach(row3 => { %>
                                                            <a href="/repoDetail/<%= row3.Id %>" class="text-muted f-w-400"><%= row3.Name %></a>
                                                            <h6 class="text-muted f-w-400">조회수: <%= row3.Views %></h6>
                                                            <h6 class="text-muted f-w-400">마지막 조회: <%= new Date(new Date(row3.viewed_at).getTime() + 9 * 60 * 60 * 1000).toLocaleString('ko-KR', {
                                                                year: 'numeric',
                                                                month: '2-digit',
                                                                day: '2-digit',
                                                                hour: '2-digit',
                                                                minute: '2-digit',
                                                                hour12: false
                                                            }) %></h6>
                                                        <% }) %>
                                                    </div>
                                                    
                                                </div>
                                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                                    <li><a href="#" data-toggle="tooltip" title="Facebook"><i class="mdi mdi-facebook"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" title="Twitter"><i class="mdi mdi-twitter"></i></a></li>
                                                    <li><a href="#" data-toggle="tooltip" title="Instagram"><i class="mdi mdi-instagram"></i></a></li>
                                                    <li>
                                                        <form action="/myrepo/createrepo" method="post" class="create-repo-form">
                                                            <input type="text" id="repoName" name="Name" required placeholder="새 Repo 이름">
                                                            <button type="submit">생성</button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="post">
                <h2>My Repository</h2>
                <div class="rss-container">    
                    <% data.forEach(row => { %>
                        <div class="rss-card">
                            <a href="/repoDetail/<%= row.Id %>">
                                <p><h3 style="display: inline;">Name: </h3> <%= row.Name || "No name" %></p>
                            </a>
                            <p>Description: <%= row.Description || "No Description" %></p>
                            <p>Updated: <%= new Date(row.Updated).toLocaleString('ko-KR', {
                                year: 'numeric',
                                month: '2-digit',
                                day: '2-digit',
                                hour: '2-digit',
                                minute: '2-digit',
                                hour12: false
                            }) %></p>
                        </div>
                    <% }) %>
                </div>  
            </div>
            <div class= "mostview">
                <% data2.forEach(row2 => { %>
                    <h1>보유 repo중 가장 많은 조회수</h1>
                    <h2>저장소 이름: <%= row2.Name %></h2>
                    <h2>조회수: <%= row2.Views %></h2>
                    <h2>마지막 업데이트: <%= new Date(row2.Updated).toLocaleString('ko-KR', {
                        year: 'numeric',
                        month: '2-digit',
                        day: '2-digit',
                        hour: '2-digit',
                        minute: '2-digit',
                        hour12: false
                    }) %></h2>
                <% }) %>
            </div>
            <% data3.forEach(row3 => { %>
                <h1>최근본 저장소</h1>
                <h2>저장소 이름: <%= row3.Name %></h2>
                <h2>조회수: <%= row3.Views %></h2>
                <h2>마지막 조회: <%= new Date(new Date(row3.viewed_at).getTime() + 9 * 60 * 60 * 1000).toLocaleString('ko-KR', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false
                }) %></h2>
            <% }) %>
            <% if (user.Username == 'admin') { %>
                <a href="/user">유저 관리 페이지</a>
                <a href="/repo">저장소 관리 페이지</a>
                <a href="/commit">커밋 관리 페이지</a>
            <% } %>
        <% } %>
    </main>
